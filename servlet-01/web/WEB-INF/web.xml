<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <!-- demo01 helloServlet -->
    <!-- 注册 Servlet -->
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.mj.servlet.demo01.HelloServlet</servlet-class>
    </servlet>
    <!-- Servlet 的请求路径-->
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!-- demo02 利用 ServletContext 共享数据-->
    <!-- ServletContext 中插入数据 -->
    <servlet>
        <servlet-name>setUserName</servlet-name>
        <servlet-class>com.mj.servlet.demo02.SetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>setUserName</servlet-name>
        <url-pattern>/setUserName</url-pattern>
    </servlet-mapping>
    <!-- ServletContext 中取出数据 -->
    <servlet>
        <servlet-name>getUserName</servlet-name>
        <servlet-class>com.mj.servlet.demo02.GetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUserName</servlet-name>
        <url-pattern>/getUserName</url-pattern>
    </servlet-mapping>

    <!-- demo03 配置 web 应用初始化参数，读取 -->
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/</param-value>
    </context-param>
    <servlet>
        <servlet-name>url</servlet-name>
        <servlet-class>com.mj.servlet.demo03.GetInitParam</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>url</servlet-name>
        <url-pattern>/url</url-pattern>
    </servlet-mapping>

    <!-- demo04 RequestDispatcher 转发，路径不变，页面变-->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>com.mj.servlet.demo04.Dispatcher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/dispatcher</url-pattern>
    </servlet-mapping>

</web-app>
